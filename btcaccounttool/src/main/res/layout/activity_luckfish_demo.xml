<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LuckyfishDemo">
    <LinearLayout
        android:id="@+id/demo_luck_search_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_ll_bg"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/demo_luck_search_et"
            style="@style/TextView16_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="Please input an account address"
            android:imeOptions="actionSearch"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <ImageView
            android:id="@+id/demo_luck_scan_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_click_gray_bg"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/qr"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>